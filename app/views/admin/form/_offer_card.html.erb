<div class="card border m-1" style="min-width: 50px; min-height: 50px; border-width: 2px; padding: 5px; width: 50.50%">
  <%= image_tag offer.image.url, class:'card-img-top', style: 'object-fit: cover; width: 386px; height: 250px;' if offer.image.present? %>
  <div class="card-body d-flex flex-column">
    <span><strong><%= offer.name.upcase %></strong></span>
    <small>Amount: <%= offer.amount %></small>
    <small>Coins: <%= offer.coin %></small>
    <small>Status: <%= offer.status.humanize %></small>
    <small>Created at: <%= offer.created_at.localtime.strftime('%Y-%m-%d %H:%M:%S') %></small>
    <div class="w-100 border-bottom my-2"></div>

    <%= link_to 'Show', offer_path(offer), class: 'btn btn-primary btn-sm w-100 mb-2' %>
    <%= link_to 'Edit', edit_offer_path(offer), class: 'btn btn-primary btn-sm w-100 mb-2' %>
    <%= button_to 'Delete', offer_path(offer), method: :delete,
                  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                  class: "btn btn-sm btn-danger w-100" %>
  </div>
</div>