<section class="sign-in-client d-grid" style="grid-auto-rows: 20vh 60vh 20vh; width: 100vw; place-items: center">


  <div class="top-nav w-100" style="place-self: start">
    <%= render partial: 'client/form/nav' %>
  </div>

  <div class="client-sign-in-main d-flex flex-column" style="width: 70%; height: 65vh">
    <div class="d-flex flex-row justify-content-between align-items-center border rounded-pill my-4">
      <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-dark w-50" %><br/>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-secondary w-50" %><br/>
    </div>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div id="emailHelp" class="form-text">
        (We'll never share your email with anyone else.)
      </div>
      <div class="form-group mb-2" style="border: 1px solid #333; border-radius: 5px;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control w-100" %>
      </div>

      <div id="passwordHelpBlock" class="form-text">
        (Your password must be 6-20 characters long.)
      </div>
      <div class="form-group mb-2" style="border: 1px solid #333; border-radius: 5px;">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: :password, class: "form-control w-100" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-outline-dark w-100" %>
      </div>
    <% end %>
  </div>

  <div class="bottom-nav w-100 border d-flex justify-content-center" style="place-items: center">
    <%= render partial: 'client/form/footer' %>
  </div>

</section>
